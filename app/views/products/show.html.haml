.product_wrapper.clearfix
  %p#notice= notice

  .product_description.clearfix
    %h1
      = link_to 'Back', root_path, class: "btn btn-default"
      = @product.title

    .col-md-6
      .row 
        %p
          %b Адрес:
          = @product.location.country.title
          = @product.location.city.title
          = @product.location.address

          %b Часы работы:
          = @product.start_working
          = @product.end_working

        .single-item
          %div= image_tag("product_images/maneg_1.jpg")
          %div= image_tag("product_images/maneg_2.jpg")
          %div= image_tag("product_images/maneg_3.jpg")

    .col-md-5.col-md-offset-1
      .row
        %p
          %b Вид спорта:
          = @product.category.title

        %p
          %b Размеры:
          = @product.length
          \x
          = @product.width
          \x
          = @product.height

        %p
          %b Покрытие:
          = @product.cover.ctype

        %p
          %b Тип площадки:
          = @product.building.btype

        %p
          %b Часы работы:
          = @product.start_working
          = @product.end_working

    .col-md-12
      .row 
        = @product.description

  - if current_user
    = link_to 'Edit', edit_admin_product_path(@product)
    \|
  = link_to 'Забронировать', new_product_book_path(@product), class: "btn order"


