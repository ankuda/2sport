%p#notice= notice

%h3 Products:

= link_to 'New product', new_admin_product_path

%p
%div
  - @products.each do |product|
    %div
      = product.title
      %b
        Description:
        = product.description
      %b
        Price:
        = product.price
      %b
        Working hours:
        = product.working_hours
      %b
        Category:
        = product.category.title
      %b
        Location:
        = product.location.country.title
        = product.location.city.title
        = product.location.address
      %b
        Size:
        = product.size.width
        \x
        = product.size.length
        \x
        = product.size.height
      %b
        Cover:
        = product.cover.ctype
      %b
        Building:
        = product.building.btype

    = link_to 'Show', admin_product_path(product)
    = link_to 'Edit', edit_admin_product_path(product)
    = link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }

    %hr
